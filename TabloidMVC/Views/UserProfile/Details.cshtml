@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}


<div class="container pt-5">
    <h4>UserProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.Label(Model.CreateDateTime.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageLocation)
        </dt>
        @*Checks to see if user has an image linked. If not, displays a placeholder.*@
        <dd class="col-sm-10">
            @if (String.IsNullOrEmpty(Model.ImageLocation))
            {
                <img src="https://workhound.com/wp-content/uploads/2017/05/placeholder-profile-pic.png" />
            } else
            {
            <img class="bg-info" src="@Model.ImageLocation" alt="avatar" />
            }
        </dd>
    </dl>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
